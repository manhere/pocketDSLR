<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:pocketDSLR="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".CameraActivity"
    android:id="@+id/cameraActivity">

    <TextureView
        android:id="@+id/cameraPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />


    <cs495.pocketdslr.VerticalSeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/imageButton3"
        android:layout_marginLeft="9dp"
        android:layout_above="@+id/imageButton2" />

    <cs495.pocketdslr.RotatableButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="ISO 10000"
        android:id="@+id/buttonISO"
        pocketDSLR:orientation="90"
        android:textSize="15dp"
        android:background="@android:color/transparent"
        android:textColor="#8CD0CA"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:indeterminate="false" />

    <cs495.pocketdslr.RotatableButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="f 16"
        android:id="@+id/button"
        pocketDSLR:orientation="90"
        android:textSize="15dp"
        android:background="@android:color/transparent"
        android:textColor="#8CD0CA"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/buttonISO" />

    <cs495.pocketdslr.RotatableButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:text="1/125 sec"
        android:id="@+id/buttonShutter"
        pocketDSLR:orientation="90"
        android:textSize="15dp"
        android:background="@android:color/transparent"
        android:textColor="#8CD0CA"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:clickable="false"
        android:src="@drawable/camera"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignTop="@+id/buttonShutter" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@drawable/chevron_thin_down"
        android:background="@android:color/transparent"
        android:layout_above="@+id/imageButton"
        android:layout_alignStart="@+id/seekBar"
        android:layout_marginBottom="46dp"
        android:layout_alignEnd="@+id/seekBar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@drawable/chevron_thin_up"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/seekBar"
        android:layout_alignEnd="@+id/seekBar" />


</RelativeLayout>